{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "*": ["*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@data/*": ["data/*"],
      "@hooks/*": ["hooks/*"],
      "@constants/*": ["constants/*"],
      "@redux/*": ["redux/*"]
    },
    "baseUrl": "./src"
  }
}
